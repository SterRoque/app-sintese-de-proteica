<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="480dp"


    android:layout_gravity="start"
    android:theme="@style/Theme.SinteseDeProteina"
    tools:context=".activity.TelaInicial">

    <Button
        android:id="@+id/button10"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_5_gradient"
        android:enabled="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:onClick="conteudo"
        android:text="CONTEÚDO"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttonSintese"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_chainStyle="spread"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonSintese"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:background="@drawable/button_5_gradient"
        android:gravity="center"
        android:onClick="SinteseProteica"
        android:text="SINTESE PROTEICA
"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="191dp"
        android:layout_height="105dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_base_3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="versão 2.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>